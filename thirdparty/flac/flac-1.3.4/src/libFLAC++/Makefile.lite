topdir = ../..
libdir = $(topdir)/objs/$(BUILD)/lib

ifndef OS
    OS := $(shell uname -s)
endif

ifeq ($(OS),Darwin)
    EXPLICIT_LIBS = $(libdir)/libFLAC.a $(OGG_EXPLICIT_LIBS) -lm -lstdc++
else
ifeq ($(OS),FreeBSD)
    LIBS = -lFLAC $(OGG_LIBS) -lm -lstdc++
else
    LIBS = -lFLAC $(OGG_LIBS) -lm -lsupc++
endif
endif

LIB_NAME = libFLAC++
INCLUDES = -I$(topdir)/include

SRCS_CPP = \
	metadata.cpp \
	stream_decoder.cpp \
	stream_encoder.cpp

include $(topdir)/build/lib.mk

