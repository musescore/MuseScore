{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": false
        }
    },
	"opts": {
        "template": "./template",
        "encoding": "utf8",               
        "destination": "./out/",          
        "recurse": true,                  
        "search": false,
        "theme_opts": {
            "default_theme": "light",
            "title": "Home",
            "__sections": ["Tutorials", "Namespaces", "Classes"]
        }                
	},
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}
