#!/bin/sh

echo "TRANSLATIONS = \\"
echo "      $1/share/locale/mscore_en.ts \\"
for l in `cat \`basename $0\`/build/locales`; do
      echo "      $1/share/locale/mscore_$l.ts \\"
      done
echo 

echo "FORMS = \\"
uis=`find $1 -name "*.ui"`
for a in $uis; do
      echo "    " $a \\;
      done
echo

echo "SOURCES = \\"
src=`find $1 -name "*.cpp"`
for a in $src; do
      echo "    " $a \\;
      done
echo

echo
