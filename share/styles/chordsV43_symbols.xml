<museScore version="1.24" type="chordStyle" styleName="Symbols" usePresets="true">

  <description>The default symbol style is based on the Colorado Cookbook: Tasty Tunes for the Musical Gourmet, a jazz fake book that made extensive and effective use of the “symbols style”. Further customization can be found in the Advanced tab.</description>

  <quality type = "bassNote">
    <sym>/lowered</sym>    
    <sym>/stacked</sym>
    <sym>/center</sym>
  </quality>

  <quality type = "major7th">
    <sym qMag = "1" qAdj = "0">triangle</sym>
    <sym qMag = "0.6" qAdj = "-4">triangle</sym>
    <sym qMag = "0.6" qAdj = "-4">triangle 7</sym>
    <sym qMag = "1" qAdj = "0">triangle 7</sym>
  </quality>

  <quality type = "augmented">
    <sym>+</sym>
    <sym>+ 5</sym>
  </quality>

  <quality type = "half-diminished">
    <sym qMag = "0.8" qAdj = "-4">oslash 7</sym>
    <sym qMag = "1" qAdj = "0">oslash 7</sym>
  </quality>

  <quality type = "diminished">
    <sym qMag = "0.8" qAdj = "-4">circle</sym>
    <sym qMag = "1" qAdj = "0">circle</sym>
  </quality>

  <quality type = "sixNine">
    <sym>6/9</sym>
    <sym>69</sym>
    <sym>6-9</sym>
  </quality>

  <quality type = "omit">
    <sym>omit</sym>
    <sym>no</sym>
  </quality>

